{
  "name": "shikwasa",
  "version": "2.1.4",
  "description": "A web audio player born for podcasts. With chapters, playback speed and forward/backward controls, it is best paired with your podcasting website.",
  "main": "dist/shikwasa.cjs.js",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-replace": "^3.1.0",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.6.0",
    "cssnano": "^5.0.17",
    "cypress": "^9.5.0",
    "eslint": "^8.18.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-webpack-plugin": "^3.1.1",
    "gh-pages": "^3.2.3",
    "html-loader": "^3.1.0",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "postcss": "^8.4.6",
    "postcss-loader": "^6.2.1",
    "rollup": "^2.67.3",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "style-loader": "^3.3.1",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "scripts": {
    "start": "npm run dev",
    "start:ci": "webpack serve --no-client",
    "dev": "webpack serve",
    "build": "npm run build:main && npm run build:chapter",
    "build:main": "TARGET=main rollup -c",
    "build:chapter": "TARGET=chapter rollup -c",
    "build:demo": "rollup -c",
    "deploy": "gh-pages -d dist",
    "lint": "eslint --fix src",
    "test:open": "npx cypress open",
    "test:ci": "npx cypress run"
  },
  "author": "Jessie Ji <jessunix+shikwasa@gmail.com> (https://jessieji.com)",
  "keywords": [
    "podcast",
    "audio",
    "player",
    "html5audio",
    "shikwasa",
    "playback",
    "chapter"
  ],
  "license": "MIT",
  "repository": "github:jessuni/shikwasa",
  "browserslist": [
    ">0.2%",
    "not ie <= 8"
  ]
}
