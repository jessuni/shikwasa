{
  "name": "shikwasa",
  "version": "2.1.1",
  "description": "A web audio player born for podcasts. With chapters, playback speed and forward/backward controls, it is best paired with your podcasting website.",
  "main": "dist/shikwasa.cjs.js",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-replace": "^2.4.1",
    "autoprefixer": "^10.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.1.3",
    "cssnano": "^4.1.10",
    "cypress": "^6.8.0",
    "eslint": "^7.22.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-webpack-plugin": "^2.5.2",
    "gh-pages": "^3.1.0",
    "html-loader": "^2.1.2",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^5.3.1",
    "postcss": "^8.2.8",
    "postcss-loader": "^5.2.0",
    "rollup": "^2.42.3",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-postcss": "^4.0.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.27.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "start": "npm run dev",
    "start:ci": "webpack serve --client-log-level silent",
    "dev": "webpack serve",
    "build": "npm run build:main && npm run build:chapter",
    "build:main": "TARGET=main rollup -c",
    "build:chapter": "TARGET=chapter rollup -c",
    "build:demo": "rollup -c",
    "deploy": "gh-pages -d dist",
    "lint": "eslint --fix src",
    "test:open": "npx cypress open",
    "test:ci": "npx cypress run"
  },
  "author": "Jessie Ji <jessunix+shikwasa@gmail.com> (https://jessieji.com)",
  "keywords": [
    "podcast",
    "audio",
    "player",
    "html5audio",
    "shikwasa",
    "playback",
    "chapter"
  ],
  "license": "MIT",
  "repository": "github:jessuni/shikwasa",
  "browserslist": [
    ">0.2%",
    "not ie <= 8"
  ]
}
